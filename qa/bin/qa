#!/usr/bin/env ruby

require_relative '../qa'

scenario = ARGV.shift

if scenario.to_s.empty?
  puts <<~INFO
    Please specify the test scenario to run.
    A list of scenarios can be found at https://gitlab.com/gitlab-org/gitlab-qa/-/blob/master/docs/what_tests_can_be_run.md
    If you see this message after starting a docker container and you intended to launch an omnibus-gitlab instance, try removing `-qa` from the image name.
  INFO
end

QA::Scenario
  .const_get(scenario)
  .launch!(ARGV)
