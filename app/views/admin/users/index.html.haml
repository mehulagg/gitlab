- page_title _("Users")

%ul.nav-links.nav-tabs.nav.js-users-tabs{ role: 'tablist' }
  %li.nav-item.js-users-tab-item{ role: 'presentation' }
    %a.nav-link{ href: '#tab-users', class: active_when(params[:tab] != 'cohorts'), data: { toggle: 'tab' }, role: 'tab' }
      = s_('AdminUsers|Users')
  %li.nav-item.js-users-tab-item{ role: 'presentation' }
    %a.nav-link{ href: '#tab-cohorts', class: active_when(params[:tab] == 'cohorts'), data: { toggle: 'tab' }, role: 'tab' }
      = s_('AdminUsers|Cohorts')

.tab-content
  .tab-pane{ id: 'tab-users', class: ('active' if params[:tab] != 'cohorts') }
    = render 'users'
  .tab-pane{ id: 'tab-cohorts', class: ('active' if params[:tab] == 'cohorts') }
    = render 'cohorts'


