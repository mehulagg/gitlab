= form_for @application_setting, url: general_admin_application_settings_path(anchor: 'js-api-settings'), html: { class: 'fieldset-form', id: 'api-settings' } do |f|
  = form_errors(@application_setting)

  %fieldset
    .form-group
      .form-check
        = f.check_box :unscoped_issue_list_api, class: 'form-check-input'
        = f.label :unscoped_issue_list_api, class: 'form-check-label' do
          = _('Allow unscoped issue lists via API')

  = f.submit _('Save changes'), class: 'gl-button btn btn-confirm qa-save-changes-button'
