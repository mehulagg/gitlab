- return unless Feature.enabled?(:disabling_inheritance, @group)
- return if @group.parent_id.nil?

.form-group.append-bottom-default
  .form-check
    = f.check_box :inheritance_disabled, checked: @group.inheritance_disabled?, class: 'form-check-input'
    = f.label :inheritance_disabled, class: 'form-check-label' do
      %span.d-block= s_('GroupSettings|Disable inheritance')
      %span.text-muted= s_('GroupSettings|This setting will prevent group members from being inherited from parents groups. Only members added explicitly will be in this group.')
