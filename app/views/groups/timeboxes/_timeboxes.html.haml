-# return unless @group.timeboxes_available?

%section.settings.no-animate{ class: ('expanded' if expanded) }
  .settings-header
    %h4
      = _('Timeboxes')
    %button.btn.js-settings-toggle{ type: 'button' }
      = expanded ? _('Collapse') : _('Expand')
    %p
      = _('Enable and configure different types timebox for tracking issues')
  .settings-content
    = form_for @group, html: { class: 'fieldset-form' } do |form|
      = form_errors(@group)

      %fieldset
        .form-group
          .form-check.border-bottom.py-3
            = form.check_box :milestones, class: 'form-check-input', checked: true
            = form.label :milestones, class: 'form-check-label row' do
              %strong.col-2 Milestone
              %span.col-10= _("Milestones are default and can't be disabled")
          .form-check.border-bottom.py-3
            = form.check_box :milestones, class: 'form-check-input'
            = form.label :milestones, class: 'form-check-label row' do
              %strong.col-2 Quarter
              %span.col-10= _('Three months (approx)')
          .form-check.mt-3
            = form.check_box :milestones, class: 'form-check-input'
            = form.label :milestones, class: 'form-check-label row' do
              %strong.col-2 Sprint
              %span.col-10= _("Don't let a 1% difference cost you twice as many MRs")
      = form.submit _('Save changes'), class: "btn btn-success"
