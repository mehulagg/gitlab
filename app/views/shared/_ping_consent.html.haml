- if session[:ask_for_usage_stats_consent]
  .ping-consent-message.gl-alert.gl-alert-warning
    = sprite_icon('warning', css_class: 'gl-icon gl-alert-icon gl-alert-icon-no-title')
    - settings_link_start = '<a href="%{url}" target="_blank" rel="noopener noreferrer" class="alert-link">'.html_safe % { url: metrics_and_profiling_admin_application_settings_path(anchor: 'js-usage-settings') }
    - not_now_path = admin_application_settings_path(application_setting: { version_check_enabled: 0, usage_ping_enabled: 0 })
    %button.js-close.gl-alert-dismiss{ type: 'button', 'aria-label' => _('Dismiss'), class: 'hide-ping-consent-message alert-link js-usage-consent-action', 'data-url' => admin_application_settings_path, method: :put, 'data-check-enabled': false, 'data-ping-enabled': false }
      = sprite_icon('close', css_class: 'gl-icon')
    .gl-alert-body
      = s_('To help improve GitLab, we would like to periodically collect usage information. This can be changed at any time in %{settings_link_start}Settings%{link_end}.').html_safe % { settings_link_start: settings_link_start, link_end: '</a>'.html_safe }
    .gl-alert-actions.gl-mt-3
      - send_usage_data_path = admin_application_settings_path(application_setting: { version_check_enabled: 1, usage_ping_enabled: 1 })
      = link_to _("Send usage data"), send_usage_data_path, 'data-url' => admin_application_settings_path, method: :put, 'data-check-enabled': true, 'data-ping-enabled': true, class: 'alert-link js-usage-consent-action btn gl-button btn-info'
      = link_to _('More information'), help_page_path('user/admin_area/settings/usage_statistics.md'), target: '_blank', class: 'alert-link btn gl-button btn-default gl-ml-2'
