- hide_link_icon = local_assigns.fetch(:hide_link_icon, false)

#blob-content.file-content.code.js-syntax-highlight
  .line-numbers
    - if blob.data.present?
      - link_icon = sprite_icon('link', size: 12)
      - link = blob_link if defined?(blob_link)
      - blob.data.each_line.each_with_index do |_, index|
        - offset = defined?(first_line_number) ? first_line_number : 1
        - i = index + offset
        -# We're not using `link_to` because it is too slow once we get to thousands of lines.
        %a.diff-line-num{ href: "#{link}#L#{i}", id: "L#{i}", 'data-line-number' => i, class: ("gl-pl-3" if hide_link_icon) }
          - unless hide_link_icon
            = link_icon
          = i
  .blob-content{ data: { blob_id: blob.id, path: blob.path } }
    %pre.code.highlight
      %code
        = blob.present.highlight
