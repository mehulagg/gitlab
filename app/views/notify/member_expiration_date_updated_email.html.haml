= email_default_heading(say_hi(@member.user))

%p
  - if @member.expires?
    = _('Your %{group} membership will now expire in %{days} days.') % { group: @member_source.human_name, days: (@member.expires_at - Date.today).to_i }
  - else
    = _('Your %{group} membership expiry has been removed.') % { group: @member_source.human_name }
%p
  - user = _('?search=%{user}') % { user: @member.user.username }
  - url = group_group_members_url(@member_source) + user
  = _('For additional information, review your %{url} or contact your group administrator.').html_safe % { url: link_to('group membership', url) }
 