<%= say_hi(@member.user) %>

<% if @member.expires? %>
  <% days=(@member.expires_at - Date.today).to_i %> 
  <% if days == 1 %> 
<%= _('Your %{group} membership will now expire in %{days} day.') % { group: @member_source.human_name, days: (@member.expires_at - Date.today).to_i } %>
  <% else %> 
<%= _('Your %{group} membership will now expire in %{days} days.') % { group: @member_source.human_name, days: (@member.expires_at - Date.today).to_i } %>
  <% end %> 
<% else %> 
<%= _('Your membership in %{group} no longer expires.') % { group: @member_source.human_name } %>
<% end %> 

<% user = _('?search=%{user}') % { user: @member.user.username } %>
<% url = group_group_members_url(@member_source) + user %>
<%= _('For additional information, review your group membership: %{url} or contact your group administrator.') % {url: url} %>
