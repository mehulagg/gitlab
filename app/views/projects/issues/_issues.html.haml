- empty_state_path = local_assigns.fetch(:empty_state_path, 'shared/empty_states/issues')
- button_path = new_project_issue_path(@project)

- if Feature.enabled?('issues_vue_component')
  %div{ id: 'js-issues-list', data: { endpoint: expose_url(api_v4_projects_issues_path(id: @project.id)), 'can-update': @can_bulk_update.to_json, 'create-path': button_path } }
- else
  %ul.content-list.issues-list.issuable-list
    = render partial: "projects/issues/issue", collection: @issues
    - if @issues.blank?
      = render empty_state_path

  - if @issues.present?
    = paginate @issues, theme: "gitlab", total_pages: @total_pages
