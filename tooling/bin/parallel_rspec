#!/usr/bin/env ruby
# frozen_string_literal: true

require 'optparse'
require_relative '../lib/tooling/parallel_rspec_runner'

options = {}

OptionParser.new do |opts|
  opts.on("-r", "--rspec_args rspec_args", String, "Optional rspec arguments") do |value|
    options[:rspec_args] = value
  end

  opts.on("-f", "--matching_tests_file matching_tests_file", String, "Optional filename containing matching tests") do |value|
    options[:matching_tests_file] = value
  end
end.parse!

Tooling::ParallelRSpecRunner.run(options)
