#!/bin/sh

set -e

cd $(dirname $0)/..

#TODO: maybe we could remove this entirely, because we only allow Puma now
case "$USE_WEB_SERVER" in
  puma|"") # and the "" defines default
    exec bin/web_puma "$@"
    ;;

  *)
    echo "Unkown web server used by USE_WEB_SERVER: $USE_WEB_SERVER."
    exit 1
    ;;
esac
