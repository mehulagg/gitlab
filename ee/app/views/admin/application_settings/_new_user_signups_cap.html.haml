.form-group
  = form.label :new_user_signups_cap, _('User cap'), class: 'label-bold'
  = form.number_field :new_user_signups_cap, class: 'form-control', max: License.current&.restricted_user_count
  .form-text.text-muted
    = _('Once the instance reaches the user cap, any user who is added or requests access will have to be approved by an admin. Leave field empty for unlimited.')
