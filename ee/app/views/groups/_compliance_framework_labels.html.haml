- return unless Feature.enabled?(:ff_custom_compliance_frameworks)
- expanded = expanded_by_default?

%section.settings.no-animate#js-compliance-frameworks-settings{ class: ('expanded' if expanded) }
  .settings-header
    %h4
      = s_('GroupSettings|Compliance framework labels')
    %button.btn.gl-button.js-settings-toggle{ type: 'button' }
      = expanded ? _('Collapse') : _('Expand')
    %p
      = s_('GroupSettings|Configure frameworks to apply enforceable rules to projects.')
  .settings-content
    #js-compliance-framework-labels-list{ data: compliance_framework_labels_list_data }
