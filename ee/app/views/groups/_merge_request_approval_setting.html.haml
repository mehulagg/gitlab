- return unless show_merge_request_approval_setting?(group)
- group_merge_request_approval_setting_api_endpoint = expose_path(api_v4_groups_merge_request_approval_setting_path(id: group.id))

%section.settings.no-animate#js-merge-request-approval-settings{ class: ('expanded' if expanded) }
  .settings-header
    %h4.settings-title.js-settings-toggle.js-settings-toggle-trigger-only{ role: 'button' }
      = s_('GroupSettings|Merge request approvals')
    %button.btn.gl-button.js-settings-toggle{ type: 'button' }
      = expanded ? _('Collapse') : _('Expand')
    %p
      = s_("Define approval settings.")
      = link_to s_('Learn more.'), help_page_path('user/project/merge_requests/merge_request_approvals'), target: '_blank'
  .settings-content
    #merge-request-approval-setting{ data: { endpoint: group_merge_request_approval_setting_api_endpoint } }
