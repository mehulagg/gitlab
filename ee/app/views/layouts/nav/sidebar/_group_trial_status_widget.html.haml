- return unless show_trial_status_widget?(group)

- days_remaining_phrase = trial_days_remaining_in_words(group)
- percent_complete = group.trial_percentage_complete

= nav_link do
  = link_to group_billings_path(group), title: days_remaining_phrase do
    .gl-display-flex.gl-flex-direction-column.gl-align-items-stretch.gl-w-full
      %span.gl-display-flex.gl-align-items-center
        %span.nav-icon-container.svg-container
          = image_tag 'illustrations/golden_tanuki.svg', class: 'svg', size: 16
        %span.nav-item-name.gl-white-space-normal
          = days_remaining_phrase
      %span.gl-display-flex.gl-align-items-stretch.gl-mt-4
        .progress.gl-flex-grow-1{ value: percent_complete }
          .progress-bar{ role: 'progressbar', 'aria-valuemin': 0, 'aria-valuemax': 100, 'aria-valuenow': percent_complete, style: "width: #{percent_complete}%" }
