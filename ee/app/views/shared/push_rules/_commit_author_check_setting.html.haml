- return unless push_rule.available?(:commit_author_check)

- form = local_assigns.fetch(:form)
- push_rule = local_assigns.fetch(:push_rule)

.form-check
  = form.check_box :commit_author_check, class: "form-check-input", disabled: !can_change_push_rule?(form.object, :commit_author_check), data: { qa_selector: 'author_restriction_checkbox' }
  = form.label :commit_author_check, class: "label-bold form-check-label" do
    = s_("PushRule|Author email restriction")
  %p.text-muted
    = commit_author_check_description(push_rule)
