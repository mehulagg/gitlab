{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "CI/CD templates metadata",
  "type": "object",
  "required": ["name", "description", "type", "group"],
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "type": { "type": "string", "enum": ["pipeline", "job"] },
    "group": { "type": "string" },
    "ignore_guideline_violation": { "type": "boolean" },
    "input": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "type", "description", "required"],
        "properties": {
          "key": { "type": "string" },
          "type": { "type": "string", "enum": ["String", "Integer", "Boolean"] },
          "description": { "type": "string" },
          "required": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
