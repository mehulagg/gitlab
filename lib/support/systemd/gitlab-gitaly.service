[Unit]
Description=GitLab Gitaly
ReloadPropagatedFrom=gitlab.target
PartOf=gitlab.target
After=network.target gitlab-puma.service

[Service]
Type=simple
User=git
WorkingDirectory=/home/git/gitaly
ExecStart=/home/git/gitaly/gitaly /home/git/gitaly/config.toml
Restart=on-failure
SyslogIdentifier=gitlab-gitaly
Slice=gitlab.slice

[Install]
WantedBy=gitlab.target
